    <table>
        <thead>
            <tr class="frame frame-heavy">
                <th>Kanji</th>
                <th>Romaji</th>
                <th>Francais</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            <tr class="frame frame-light">
                <td>{{ type.kanji }}</td>
                <td>{{ type.romaji }}</td>
