{% extends 'adminBase.html.twig' %}

{% block title %}type index{% endblock %}

{% block body %}

    <div class="admin-index-tools">
        <a class="admin-index-tools-back" href="{{ path('admin_dashboard') }}">
            <i class="fas fa-chevron-left"></i>
            Dashboard
        </a>
        <a class="admin-index-tools-add" href="{{ path('type_new') }}">Ajouter
            <i class="fas fa-plus-circle"></i>
        </a>
    </div>
    <div class="table">
        <div class="thead">
            <div class="tr frame frame-heavy"> 
                <div class="th">Nom du type</div>
            </div>
        </div>
        <div class="tbody">
        {% for type in types %}
        <a class="tr clickable frame frame-light" href="{{ path('type_edit', {'id': type.id}) }}">
            <div class="td">{{ type.name }}</div>
        </a>
        {% endfor %}
        </div>
    </div>

{% endblock %}
