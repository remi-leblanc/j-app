{% extends 'base.html.twig' %}

{% block title %}WordReport index{% endblock %}

{% block body %}
    <h1>WordReport index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for word_report in word_reports %}
            <tr>
                <td>{{ word_report.id }}</td>
                <td>{{ word_report.description }}</td>
                <td>
                    <a href="{{ path('word_report_show', {'id': word_report.id}) }}">show</a>
                    <a href="{{ path('word_report_edit', {'id': word_report.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('word_report_new') }}">Create new</a>
{% endblock %}
