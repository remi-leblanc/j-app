{% extends 'adminBase.html.twig' %}

{% block title %}Edit Word{% endblock %}

{% block body %}

    <div id="error-word-exist" class="frame frame-important frame-error">Ce mot existe déjà. <a href="">Editer</a></div>

    {{ include('word/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
    
    {{ form_start(selectionForm) }}
    <div class="form-row">
		<div class="form-widget">
			{{ form_widget(selectionForm.submit, {'attr': {'class': 'frame frame-heavy clickable'}}) }}
		</div>
	</div>
    {{ form_end(selectionForm) }}

    {{ include('word/_delete_form.html.twig') }}


{% endblock %}

{% block scripts %}
<script>

    var currentWordId = "{{ word.id }}";

    var words = [
        {% for word in words %}
            {
                "id": "{{ word.id }}",
                "kanji": "{{ word.kanji }}",
                "edit_url": "{{ path('word_edit', {id: word.id }) }}"
            },
        {% endfor %}
    ];

</script>
{{ parent() }}
{% endblock %}